<p id="notice"><%= notice %></p>

<% title = "Forums" %>
<%= title %>

<table>
  <% for forum in @forums %>
    <tr>
      <td>
        <h4>
          <%= link_to h(forum.name), forum_path(forum.id) %>
        </h4>
        <small>
          <%= forum.topics.count %>
          topics
        </small>
        <br />
        <%=h forum.description %>
      </td>

      <td>
        <%= link_to "Edit", edit_forum_path(forum) %>
      </td>
      <td>
        <%= link_to "Destroy", forum, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "New Forum", new_forum_path %>
</p>
